package sqlite3
version      = 0.0.1
authors      = "stefan-hoeck"
readme       = "README.md"
license      = "BSD-3 Clause"
brief        = "Idris2 bindings to the sqlite3 API"

depends = base >= 0.6.0
        , elab-util
        , bytestring

sourcedir = "src"

modules = Data.WithID

        , Derive.Sqlite3
        , Derive.Sqlite3.FromCell
        , Derive.Sqlite3.FromRow
        , Derive.Sqlite3.ToCell
        , Derive.Sqlite3.ToRow

        , Sqlite3
        , Sqlite3.Cmd
        , Sqlite3.Expr
        , Sqlite3.Marshall
        , Sqlite3.Parameter
        , Sqlite3.Prim
        , Sqlite3.Table
        , Sqlite3.Types

prebuild = "make -C support"

preinstall = "make -C support install"
